@page "/Families"
@using Models
@using FileData
@inject IFamilyData _familyData
<h1>Families</h1>

<p> Search: 
    <input type="text" @oninput="(arg) => filterByName(arg)"/>
</p>

@if (_Families == null)
{
    <p>Loading.....</p>
}
else if (!_Families.Any())
{
    <p>No people have been added.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Streetname</th>
            <th>House number</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Family family in _Families)
        {
            <tr>
                <td>@family.StreetName</td>
                <td>@family.HouseNumber</td>
                <td>
                    @foreach (var person in family.Adults)
                    {
                        <span>@person.FirstName @person.LastName</span>
                        <br/>
                    }
                </td>
                <td>
                    <button class="btn btn-warning">
                        <span class="oi oi-pencil"></span>
                    </button>
                    <button class="btn btn-danger">
                        <span class="oi oi-trash"></span>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private string? searchInput = null;
    public List<Family> _Families { get; set; }
    public List<Family> FamiliesToShow { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _Families = _familyData.GetFamily().ToList();
        FamiliesToShow = _Families;
    }

    private void filterByName(ChangeEventArgs changeEventArgs)
    {
        foreach (var family in _Families)
        {
            List<Adult> adults = family.Adults;
            foreach (Adult adult in adults)
            {
                if (adult.FirstName.Equals(changeEventArgs.Value.ToString()))
                {
                    FamiliesToShow = _Families.Where(f => f.Adults.Contains(adult));

                }
            }
        }

        searchInput = null;

        try
        {
            searchInput = changeEventArgs.Value.ToString();
        }
        catch (Exception e)
        {
        }
        
        
    }
}